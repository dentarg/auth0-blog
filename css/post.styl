.post
  position relative
  border 1px solid #E3E5E7
  border-radius 4px
  box-shadow 0 5px 20px rgba(0,0,0,0.05)
  text-align left
  margin-bottom 30px

  a
    color: color_grey_text;

  &:hover
    .backdrop
      opacity 0.02

  .backdrop
    transition opacity 0.2s easeInOut
    opacity 0
    display block
    position absolute
    top 0
    left 0
    height 100%
    width 100%
    border-radius 4px 0 0 4px

  .image-container
    position relative



    +breakpoint("tablet", "max")
      width 100%
      height 140px
      border-bottom 1px solid rgba(151, 151, 151, 0.15)

    +breakpoint("tablet")
      position absolute
      top 0
      left 0
      bottom 0
      width 150px
      border-right 1px solid rgba(151, 151, 151, 0.15)

    .entry-thumbnail
      position absolute
      top 50%
      left 50%
      transform( translateX(-50%) translateY(-50%) )
      max-width 100px
      max-height 100px
      margin-top 0
      z-index 1

  .text-container
    padding 30px
    text-align center

    +breakpoint("tablet")
      text-align left
      margin-left 150px

  .post-category
    font-size 13px
    letter-spacing 1px
    text-transform uppercase

  .post-title
    font-weight 500
    font-size 22px
    line-height 1.5em
    margin 0
    margin-bottom 10px
    color black

    a,
    a:hover
      color inherit

    +breakpoint("tablet")
      font-size 26px

  .post-description
    font-size 14px
    line-height 2em

  .more-info
    margin-top 30px
    text-align center
    font-size 13px

    +breakpoint("tablet")
      text-align left
      height 30px
      width 100%
      position relative

  .post-author

    a,
    a:hover
      color inherit

    img
      border-radius 50%
      margin-right 5px

    +breakpoint("tablet", "max")
      display block
      margin-bottom 10px

    +breakpoint("tablet")
      display inline-block
      position absolute
      top 50%
      left 0
      transform translateY(-50%)

  .post-time
    float right
    font-size: 13px;

  .post-social

    +breakpoint("tablet", "max")
      display block

    +breakpoint("tablet")
      display inline-block
      position absolute
      top 50%
      right 0
      transform translateY(-50%)

.empower-video-button
  margin: 25px auto;
  position: relative;
  border: 2px solid #3445dc;
  border-radius: 5px;
  overflow: hidden;
  display: inline-block;
  cursor: pointer;
  max-width: 94%;
    
  .video-button
    position: absolute;
    top: 30%;
    left: 50%;
    transform: translate(-50%,-50%) scale(1);
    transition: transform .3s ease-in-out;
    
    +breakpoint("desktop")
      top: 40%;


  .video-screen
    width: 100%;
    height: 100%;
    max-width: 700px;
    max-height: 394px;
    margin: 0;



