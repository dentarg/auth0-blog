.n-banner.n-banner-post
  background: #354171;
  margin-bottom: 0;

  .n-banner-container
    -webkit-animation: none;
    animation: none;
    padding-top: 50px;
    padding-bottom: 50px;
    +breakpoint("desktop")
      padding-top: 100px;
      padding-bottom: 99px;

    .content
      display: flex;
      flex-direction: column;
      justify-content: center;

      .btn-transparent
        box-shadow: inset 0 0 0 1px #FFFFFF;
        color: #FFFFFF;

      .btn-success
        margin-bottom: 20px;
      h1
        text-align: center
        width: 100%
        font-size: 36px
        color: #FFFFFF
        line-height: 40px
      p
        text-align: center
        width: 100%
        opacity: 0.7
        font-size: 18px
        color: #FFFFFF
        line-height: 26px
        margin-bottom: 30px

    .image
      display: none

    +breakpoint("desktop")
      display: flex;
      justify-content: flex-end;
      margin-bottom: 20px;
      padding: 0;
      padding-left: 15px;
      padding-right: 15px;

      .content
        padding: 0px;
        width: 45%;
        display: flex;
        flex-direction: row;
        align-content: center;
        flex-wrap: wrap;
        justify-content: flex-start;
        h1, p
          text-align: justify
        .btn-transparent
          margin-left: 15px;
        .btn-success
          margin-bottom: 0;
      .image
        display: inline-flex;
        background-size: contain;
        width: 55%;
        height: 330px;
        margin-top: 10px;
        background-repeat:no-repeat;
        background-image: url('https://cdn.auth0.com/blog/main/illustration_blog.svg');

  +breakpoint("desktop")
    padding-top: 162px;
    padding-bottom: 40px;

  &.n-banner-blog
    padding-bottom: 0px;
    background: #1F1C2C;
    background: linear-gradient(135deg, #1f1c2c 0%,#323043 100%);

  .banner-subtitle
    @extend .small-caps;
    font-size: 14px;
    opacity: 0.7;
    margin 0

  .entry-content p
    color: white;
    font-size: 20px;
    margin-bottom: 40px;
    opacity: 0.7;

  .entry-title
    +breakpoint("desktop")
      font-size: 32px;

  a,
  a:hover
    color: white;

  .network,
  .date
    color: white;
